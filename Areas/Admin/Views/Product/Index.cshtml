@model X.PagedList.IPagedList<ProductModel>
@using System.Text.RegularExpressions
@using System.Net
@using X.PagedList.Mvc.Core;

@{
    ViewData["title"] = "Product Listed";
}

<h3 class="mb-3 text-center">List Product</h3>
<a asp-action="Create" asp-controller="Product" class="btn btn-success mb-3">➕ Add Product</a>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th>Slug</th>
            <th>Category</th>
            <th>Brand</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@Html.Raw(WebUtility.HtmlDecode(Regex.Replace(item.Description, @"<\/?p>", "")))</td>
                <td class="text-end">@item.Price.ToString("N0") ₫</td>
                <td class="text-center">
                    <img src="~/media/products/@item.Image" width="90"
                         class="img-thumbnail" alt="Product image" />
                </td>
                <td>@item.Slug</td>
                <td>@item.Category?.Name</td>
                <td>@item.Brand?.Name</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id"
                       class="btn btn-warning btn-sm me-1">Edit</a>
                    <a asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id"
                       class="btn btn-danger btn-sm confirmDeletion">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<div class="d-flex justify-content-center mt-3">
    @Html.PagedListPager(
    Model,
    page => Url.Action("Index", new { page }),
        new PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" },
            UlElementClasses = new[] { "pagination justify-content-center" },
            ActiveLiElementClass = "active"
        }
        )
</div>