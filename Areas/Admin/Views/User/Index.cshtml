@model IEnumerable<AppUserModel>
@{
    ViewData["Title"] = "List User";
}

<h3>List User</h3>

<a class="btn btn-primary mb-3" asp-action="Create" asp-controller="User">Add User</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Email</th>
            <th>PasswordHash</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PasswordHash</td>
                <td>@user.PhoneNumber</td>
                <td>@user.RoleNames</td>
                <td>
                    <a class="btn btn-warning btn-sm"
                       asp-action="Edit" asp-controller="User" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion"
                       asp-action="Delete" asp-controller="User" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
